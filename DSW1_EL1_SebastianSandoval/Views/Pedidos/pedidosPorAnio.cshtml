@model IEnumerable<DSW1_EL1_SebastianSandoval.Models.PedidoCabe>

@{
    ViewBag.Title = "PedidosAnio";
}

<h2>Pedidos por Año</h2>

@using (Html.BeginForm())
{

    <p>Ingrese el Año </p>
    @Html.DropDownList("y", ViewBag.years as SelectList, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Procesar</button>

}

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idpedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechapedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ciudad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idpedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechapedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudad)
            </td>

        </tr>
    }

</table>

<div>
    @Html.ActionLink("|<", "pedidosPorAnio", new { p = 0, y = ViewBag.y }, new { @class = "btn btn-primary" })
    @Html.ActionLink("<<", "pedidosPorAnio", new { p = (ViewBag.p - 1 < 0 ? 0 : ViewBag.p - 1), y = ViewBag.y }, new { @class = "btn btn-primary" })
    <em>@(ViewBag.p+1)</em>
    @Html.ActionLink(">>", "pedidosPorAnio", new { p = (ViewBag.p + 1 > ViewBag.numPags - 1 ? ViewBag.numPags - 1 : ViewBag.p + 1), y = ViewBag.y }, new { @class = "btn btn-primary" })
    @Html.ActionLink(">|", "pedidosPorAnio", new { p = ViewBag.numPags - 1, y = ViewBag.y }, new { @class = "btn btn-primary" })
</div>
